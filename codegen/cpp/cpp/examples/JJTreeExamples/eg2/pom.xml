<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.javacc.generator.cpp.examples</groupId>
		<artifactId>jjtree</artifactId>
		<version>8.0.0-SNAPSHOT</version>
	</parent>
	<groupId>org.javacc.generator.cpp.examples.jjtree</groupId>
	<artifactId>eg2</artifactId>
	<packaging>nar</packaging>
	<name>JavaCC examples C++  JJTree EG2</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.javacc.plugin</groupId>
				<artifactId>javacc-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>jjt8jjt</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>jjtree-javacc</goal>
						</goals>
						<configuration>
							<nodePackage>eg2</nodePackage>
							<outputDirectory>${project.basedir}/target/generated-sources/cpp/eg2</outputDirectory>
							<nodeDirectory>${project.basedir}/src/main/cpp/eg2</nodeDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.github.maven-nar</groupId>
				<artifactId>nar-maven-plugin</artifactId>
				<extensions>true</extensions>
				<executions>
					<execution>
						<id>default-nar-compile</id>
						<goals>
							<goal>nar-compile</goal>
						</goals>
						<configuration>
							<libraries>
								<library>
									<type>executable</type>
								</library>
							</libraries>
							<cpp>
								<includePaths>
									<includePath>
										<path>${project.basedir}/src/main/cpp/eg2</path>
									</includePath>
									<includePath>
										<path>${project.basedir}/target/generated-sources/cpp/eg2</path>
									</includePath>
									<includePath>
										<path>${project.basedir}/target/generated-sources/jjtree/eg2</path>
									</includePath>
								</includePaths>
							</cpp>
						</configuration>
					</execution>
					<execution>
						<id>run-eg2</id>
						<goals>
							<goal>nar-test</goal>
						</goals>
						<configuration>
							<libraries>
								<library>
									<type>executable</type>
									<run>true</run>
								</library>
							</libraries>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>