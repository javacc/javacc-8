								<argument>${project.basedir}/simple2/out</argument>
								<argument>${project.basedir}/simple2/err</argument>
							</arguments>
						</configuration>
					</execution>
					<execution>
						<id>simple3</id>
						<phase>test</phase>
						<goals>
							<goal>java</goal>
						</goals>
