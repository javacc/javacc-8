	<groupId>org.javacc.codegen.java.grammars</groupId>
	<artifactId>ecma</artifactId>
	<name>JavaCC grammars java ecma</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.javacc.plugin</groupId>
				<artifactId>javacc-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>jcc</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>jjtree-javacc</goal>
						</goals>
						<configuration>
							<nodeDirectory>src/main/java</nodeDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>run-ecma</id>
						<phase>test</phase>
						<goals>
							<goal>java</goal>
						</goals>
						<configuration>
							<mainClass>EcmaScript</mainClass>
							<arguments>
								<argument>${project.basedir}/ecma/main.ecma</argument>
							</arguments>
						</configuration>
					</execution>
				</executions>
			</plugin>
