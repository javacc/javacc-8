<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.javacc.examples.cpp</groupId>
		<artifactId>Interpreter</artifactId>
		<version>8.0.0-SNAPSHOT</version>
	</parent>
	<groupId>org.javacc.examples.cpp.interpreter</groupId>
	<artifactId>VST</artifactId>
	<packaging>nar</packaging>
	<name>JavaCC examples C++  Interpreter VST</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.javacc.plugin</groupId>
				<artifactId>javacc-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>jcc</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>jjtree-javacc</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.basedir}/target/generated-sources/cpp</outputDirectory>
							<nodeDirectory>${project.basedir}/src/main/cpp</nodeDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.github.maven-nar</groupId>
				<artifactId>nar-maven-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<libraries>
						<library>
							<type>executable</type>
							<run>true</run>
							<args>
								<arg>${project.basedir}/spl/calc/calc.spl</arg>
								<arg>${project.basedir}/spl/calc/calc.in</arg>
								<arg>${project.basedir}/spl/calc/calc.out</arg>
								<arg>${project.basedir}/spl/calc/calc.err</arg>
							</args>
<!-- 
							<args>
								<arg>${project.basedir}/spl/odd/odd.spl</arg>
								<arg>${project.basedir}/spl/odd/odd.in</arg>
								<arg>${project.basedir}/spl/odd/odd.out</arg>
								<arg>${project.basedir}/spl/odd/odd.err</arg>
							</args>
 -->
  						</library>
					</libraries>
					<cpp>
						<includePaths>
							<includePath>
								<path>${project.basedir}/src/main/cpp</path>
							</includePath>
							<includePath>
								<path>${project.basedir}/target/generated-sources/cpp</path>
							</includePath>
							<includePath>
								<path>${project.basedir}/target/generated-sources/jjtree</path>
							</includePath>
						</includePaths>
					</cpp>
 				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>compare-calc</id>
						<phase>test</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target unless="maven.test.skip">
								<available file="${project.basedir}/spl/calc/calc.out" property="isActualAvailable" />
								<fail unless="isActualAvailable" message="${project.basedir}/spl/calc/calc.out does not exist!" />
								<available file="${project.basedir}/spl/calc/calc.ref" property="isExpectedAvailable" />
								<fail unless="isExpectedAvailable" message="${project.basedir}/spl/calc/calc.ref does not exist!" />
								<condition property="files.match">
									<filesmatch file1="${project.basedir}/spl/calc/calc.out" file2="${project.basedir}/spl/calc/calc.ref" />
								</condition>
								<fail unless="files.match" message="${project.basedir}/spl/calc/calc.out does not match ${project.basedir}/spl/calc/calc.ref!" />
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
